                {
                    "Host": "dashboard",
                    "Port": 80
                }
            ],
            "DownstreamPathTemplate": "/api/dashboard"
        },
        {
            "UpstreamPathTemplate": "/api/dashboard/{id}",
            "UpstreamHttpMethod": [ "Get", "Delete" ],
